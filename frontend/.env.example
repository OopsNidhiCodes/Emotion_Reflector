# ===========================================
# VITE REACT.JS ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local and fill in your actual values
# All environment variables must be prefixed with VITE_ to be accessible in the browser

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
# Get these values from your Firebase project settings
# Firebase Console: https://console.firebase.google.com/

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012

# ===========================================
# PYTHON BACKEND API CONFIGURATION
# ===========================================
# Configure these to match your Python backend setup

# Base URL for your Python backend API
# Development: http://localhost:8000/api
# Staging: https://your-staging-api.com/api
# Production: https://your-production-api.com/api
VITE_API_BASE_URL=http://localhost:8000/api

# API request timeout in milliseconds
VITE_API_TIMEOUT=10000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# These are optional and only used in development

# Enable detailed API logging in development
VITE_DEBUG_API=true

# Enable Firebase emulator (if using Firebase emulators for development)
# VITE_USE_FIREBASE_EMULATOR=true
# VITE_FIREBASE_EMULATOR_HOST=localhost
# VITE_FIREBASE_AUTH_EMULATOR_PORT=9099
# VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8080

# ===========================================
# EXAMPLE VALUES FOR DIFFERENT ENVIRONMENTS
# ===========================================

# DEVELOPMENT (.env.local)
# VITE_API_BASE_URL=http://localhost:8000/api
# VITE_DEBUG_API=true

# STAGING (.env.staging)
# VITE_API_BASE_URL=https://staging-api.yourapp.com/api
# VITE_DEBUG_API=false

# PRODUCTION (.env.production)
# VITE_API_BASE_URL=https://api.yourapp.com/api
# VITE_DEBUG_API=false
